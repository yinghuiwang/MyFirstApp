<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.example.wangyinghui.a0720_myfirstapp">

  <!--网络权限-->
  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:name=".MyApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <!-- 闪屏 -->
    <activity
      android:name=".page.splash.SplashScreenActivity"
      android:theme="@style/AppTransparentTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".page.login.LoginActivity" />
    <activity
      android:name=".page.home.HomeActivity"
      android:label="@string/title_activity_home"/>
    <activity
      android:name=".page.guide.GuideActivity"
      android:theme="@style/AppTransparentTheme" />
  </application>

</manifest>